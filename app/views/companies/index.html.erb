<div class="container">
<h1>Companies</h1>
<table class="table table-hover">
  <thead>
    <tr class="table-active">
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.location %></td>
        <td><%= link_to 'Employee list', company, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Edit company', edit_company_path(company), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Delete company', company, method: :delete, :class => 'btn btn-info', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, :class => "btn btn-success" %>
</div>
